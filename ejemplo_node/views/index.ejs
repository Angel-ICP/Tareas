            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addProviderModal">AÃ±adir Proveedor</button>
        </div>
        <table class="table table-border">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nombres</th>
                    <th>Ap Paterno</th>
                    <th>Ap Materno</th>
